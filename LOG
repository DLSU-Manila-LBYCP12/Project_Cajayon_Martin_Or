    public void init(){
        
        try {
            GUILOG();
        } catch (IOException ex) {
            Logger.getLogger(LOG.class.getName()).log(Level.SEVERE, null, ex);
        }
       
    }  
    public void GUILOG() throws IOException {
        
        add(new JLabel ("Username:"),WEST);
        UserField = new JTextField(TEXT_FIELD_SIZE);
        add(UserField,WEST);
        UserField.addActionListener(this);
        
        add(new JLabel ("Password:"),WEST);
        PWField = new JTextField(TEXT_FIELD_SIZE);
        add(PWField,WEST);
        PWField.addActionListener(this);
        
        add(new JLabel ("New Username:"),WEST);
        UserNew = new JTextField(TEXT_FIELD_SIZE);
        add(UserNew,WEST);
        UserNew.addActionListener(this);
        
        add(new JLabel ("New Password:"),WEST);
        PWNew = new JTextField(TEXT_FIELD_SIZE);
        add(PWNew,WEST);
        PWNew.addActionListener(this);
                
        add(new JButton ("Sign In"),EAST);
        
        add(new JButton ("Sign Up"),EAST);
        add(new JButton ("Cancel"),EAST);
        addActionListeners();
        
    }
    public void actionPerformed(ActionEvent e) {
        if(e.getActionCommand().equals("Sign In")){
            signin();
        }else if(e.getActionCommand().equals("Sign Up")){
            signup();
        }
    }
